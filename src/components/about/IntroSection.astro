  </div>

  <script is="client" type="module">
    (function() {
      const reveals = document.querySelectorAll('.reveal');
      if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
        reveals.forEach(el => {
          el.classList.replace('opacity-0', 'opacity-100');
          el.classList.replace('translate-y-4', 'translate-y-0');
        });
        return;
      }
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(({ target, isIntersecting }) => {
          if (isIntersecting) {
            target.classList.replace('opacity-0', 'opacity-100');
            target.classList.replace('translate-y-4', 'translate-y-0');
          } else {
            target.classList.replace('opacity-100', 'opacity-0');
            target.classList.replace('translate-y-0', 'translate-y-4');
          }
        });
      }, { threshold: 0.2 });
      reveals.forEach(el => observer.observe(el));
    })();
  </script>

  <style is="global">
    @keyframes sparkle {
      0%, 100% { opacity: 0.04; }
      50% { opacity: 0.1; }
    }
    .animate-float { animation: sparkle 12s ease-in-out infinite; }
  </style>
