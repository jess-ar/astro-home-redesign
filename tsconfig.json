{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "src/env.d.ts",
    "src/**/*"
  ],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": { "@/*": ["src/*"] },
    "types": ["astro/client"],
    "plugins": [{ "name": "@astrojs/ts-plugin" }]
  }
}
